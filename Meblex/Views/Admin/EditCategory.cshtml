@model MeblexData.Models.Category

<hr />

<h1 align="center">Edycja kategorii</h1>

<hr />
<div  align="center">
    <div class="col-md-4">
        <form asp-action="EditCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>         
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-success btn-lg btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Categories" class="btn btn-secondary btn-lg btn-block" >Powrot do listyt</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
