@model IEnumerable<Meblex.ModelsDTO.CategoryDTO>

@{
    ViewData["Title"] = "Categories";
}
<hr />


<h1 align="center">Lista Kategorii</h1>

<hr />

<a asp-action="CreateCategory" type="button" class="btn btn-secondary btn-lg btn-block">Dodaj nową kategorie</a>
<hr />


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Akcje
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                
                <td>
                    <div class="btn-group">
                        <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Zarządzaj
                        </button>
                        <div class="dropdown-menu dropdown-menu-dark ">

                            <li>
                                <a class="dropdown-item" asp-action="EditCategory" asp-route-id="@item.CategoryId">Edycja</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="DetailsCategory" asp-route-id="@item.CategoryId">Detale</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="DeleteCategory" asp-route-id="@item.CategoryId">Usuń</a>
                            </li>

                        </div>
                      </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" type="button" class="btn btn-dark btn-lg btn-block">Powrót do Menu</a>
